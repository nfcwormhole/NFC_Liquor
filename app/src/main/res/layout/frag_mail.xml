<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <TextView
         android:id="@+id/mail"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:paddingRight="40dp"
        android:layout_marginTop="18dp"
         android:background="@drawable/button_nfc_action"
         android:drawableLeft="@drawable/mail"
         android:gravity="center"
         android:text="Mail"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#000000"
         android:typeface="serif" />
        
        
        <EditText
         android:id="@+id/editTo"
          android:layout_toLeftOf="@+id/addTo"
         android:layout_height="wrap_content"
           android:layout_width="wrap_content"
         android:layout_below="@+id/mail"
         android:layout_marginTop="18dp"
         android:hint="To"
         android:ems="10"
         android:layout_marginLeft="5dp"
        android:inputType="textEmailAddress" />
       
       
       <Button
         android:id="@+id/addto"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
         android:layout_alignBottom="@+id/editTo"
          android:background="@android:color/holo_blue_light"
          android:textAppearance="?android:attr/textAppearanceSmall" 
         android:layout_marginLeft="2dp"
         android:text=" Add To" />
       
       <EditText
         android:id="@+id/editCc"
          android:layout_toLeftOf="@+id/addCc"
         android:layout_height="wrap_content"
           android:layout_width="wrap_content"
         android:layout_below="@+id/editTo"
         android:layout_marginTop="18dp"
         android:hint="Cc"
         android:ems="10"
         android:layout_marginLeft="5dp"
         android:inputType="textEmailAddress" />
       
       
       <Button
         android:id="@+id/addcc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_alignBottom="@+id/editCc"
          android:background="@android:color/holo_blue_light"
          android:textAppearance="?android:attr/textAppearanceSmall" 
         android:layout_marginLeft="2dp"
         android:text=" Add Cc" />
       
       
       <EditText
         android:id="@+id/editBcc"
         android:layout_toLeftOf="@+id/addBcc"
         android:layout_height="wrap_content"
           android:layout_width="wrap_content"
         android:layout_below="@+id/editCc"
         android:layout_marginTop="18dp"
         android:hint="Bcc"
         android:ems="10"
         android:layout_marginLeft="5dp"
         android:inputType="textEmailAddress" />
       
       
       <Button
         android:id="@+id/addbcc"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        
         android:layout_alignBottom="@+id/editBcc"
          android:background="@android:color/holo_blue_light"
          android:textAppearance="?android:attr/textAppearanceSmall" 
         android:layout_marginLeft="2dp"
         android:text=" Add Bcc" />
       
       
       <EditText
         android:id="@+id/editSubject"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/editBcc"
         android:layout_marginTop="18dp"
         android:hint="Subject"
         android:ems="10"
         android:layout_marginLeft="5dp"
         android:inputType="textMultiLine" />
       
       
       <EditText
         android:id="@+id/editBody"
         android:layout_width="300dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/editSubject"
         android:layout_marginTop="18dp"
         android:hint="Body"
         android:ems="10"
         android:layout_marginLeft="5dp"
         android:inputType="textMultiLine" />
       

</RelativeLayout>
